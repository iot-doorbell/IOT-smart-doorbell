<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 1. Nửa trên: Video stream -->
    <WebView
        android:id="@+id/webViewVideo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black" />

    <!-- 2. Nửa dưới: Chat + Control -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#CCFFFFFF"
        android:padding="8dp">

        <!-- 2.1 RecyclerView hiển thị chat -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="always"
            android:paddingBottom="8dp" />

        <!-- 2.2 Input + nút Send -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nhập tin nhắn..."
                android:padding="8dp"
                android:background="@drawable/shape_input_background"
                android:maxLines="4" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/send"
                android:src="@drawable/ic_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />
        </LinearLayout>

        <!-- 2.3 Nút End Call -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/room_end_call"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/holo_red_dark"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_call_end"
            app:iconGravity="textStart" />

    </LinearLayout>
</LinearLayout>